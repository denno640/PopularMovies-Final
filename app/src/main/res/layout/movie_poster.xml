<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="top|center"
    app:cardCornerRadius="@dimen/card_corner_radius_4dp"
    app:cardElevation="@dimen/margin_8dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:cardUseCompatPadding="true">
    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/poster_dimension"
            android:layout_height="@dimen/poster_dimension"
            android:src="#afaeae"
            android:id="@+id/movie_poster_iv"
            android:scaleType="fitCenter"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:layout_marginStart="@dimen/margin_8dp"
            android:contentDescription="@string/description"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:id="@+id/movie_title_tv"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginEnd="@dimen/margin_8dp"
            android:layout_marginStart="@dimen/margin_8dp"
            app:layout_constraintStart_toStartOf="@id/movie_poster_iv"
            app:layout_constraintEnd_toEndOf="@id/movie_poster_iv"
            app:layout_constraintTop_toBottomOf="@id/movie_poster_iv"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>